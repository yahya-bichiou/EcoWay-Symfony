{% extends 'back.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <h1 class="text-center my-4">Liste des Événements</h1>


                        <div class="table-responsive">
                            <table class="table table-bordered table-striped text-center">
                                <thead class="bg-primary text-white text-center">
                                    <tr>
                                        <th>ID</th>
                                        <th>Titre</th>
                                        <th>Description</th>
                                        <th>Localisation</th>
                                        <th>Date</th>
                                        <th>Récompense</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>

<form action="{{ path('app_backevenement_index') }}" method="get">
<div class="form-group">
<input type="text" name="titre" value="{{ titre }}" class="form-control" placeholder="Rechercher par titre...">
 </div>
                                    {% for evenement in evenements %}
                                        <tr>
                                            <td>{{ evenement.id }}</td>
                                            <td>{{ evenement.titre }}</td>
                                            <td>{{ evenement.description }}</td>
                                            <td>{{ evenement.localisation }}</td>
                                            <td>{{ evenement.dateD|date('d/m/Y') }}</td>
                                            <td>{{ evenement.recomponse }}</td>
                                            <td>
                                                <a href="{{ path('app_evenement_sb', {'id': evenement.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                                {{ include('evenement/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">Aucun événement trouvé.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- Boutons d'action -->
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="{{ path('app_evenement_newback') }}" class="btn btn-success">Ajouter un événement</a>
                            <a href="{{ path('app_participant_indexback') }}" class="btn btn-primary">Liste des participants</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  </body>
{% endblock %}
