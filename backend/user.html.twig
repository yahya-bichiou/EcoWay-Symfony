{% extends 'back.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
                <div class="row">
                    <div class="col-12">
                        <div class="card card-default">
                            <div class="card-header">
                                <h2>User Management</h2>
                                <a href="{{ path('app_user_new') }}" class="btn btn-light">
                                    <i class="fas fa-user-plus"></i> Add User
                                </a>
                                
                                <div class="card-body">
                                <table class="table table-hover table-product" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        {% if users is defined %}
                                        <tbody>
                                            {% for user in users %}
                                                <tr class="align-middle user-row"> 
                                                    <td>{{ user.id }}</td>
                                                    <td class="user-name">{{ user.name }}</td>
                                                    <td>{{ user.email }}</td>
                                                    <td>
                                                        <span class="badge bg-secondary">{{ user.roles|join(', ') }}</span>
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">
                                                                <i class="fas fa-eye"></i> Show
                                                            </a>
                                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="POST" style="display:inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                                                    <i class="fas fa-trash"></i> Delete
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted">No users found</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                        {% else %}
                                        <p>Error: Users variable is not defined</p>
                                      {% endif %}
                                    </table>
                                  </div>
                            </div>
                        </div>
                    </div>



<!-- FontAwesome Icons (Ensure FontAwesome is included in your base layout) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}
