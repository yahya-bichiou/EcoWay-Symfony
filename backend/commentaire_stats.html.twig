      <!-- Graphique du ratio des commentaires valides/inappropriÃ©s -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-header bg-success text-white text-center">
            <h5>Ratio des Commentaires Valides/InappropriÃ©s</h5>
