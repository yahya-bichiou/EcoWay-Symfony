                                }
                            }
                        }
                    }
                });

                // Graphique du ratio des commentaires valides/inappropriÃ©s
                new Chart(document.getElementById("commentRatioChart"), {
                    type: "doughnut",
                    data: {
                        labels: ["Valides", "InappropriÃ©s"],
                        datasets: [{
                            data: [data.validComments, data.invalidComments],
                            backgroundColor: ["#28a745", "#dc3545"],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            tooltip: {
                                callbacks: {
