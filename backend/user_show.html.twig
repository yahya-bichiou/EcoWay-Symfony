{% extends 'back.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    
                    <div class="col-xl-9">
                        <!-- User Details -->
                        <div class="card card-default">
                            <div class="card-header">
                                <h2 class="mb-5">User Details</h2>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-4">
                                    <label><strong>Name:</strong></label>
                                    <p class="form-control">{{ user.name }}</p>
                                </div>
                                <div class="form-group mb-4">
                                    <label><strong>Email:</strong></label>
                                    <p class="form-control">{{ user.email }}</p>
                                </div>
                                <div class="form-group mb-4">
                                    <label><strong>Roles:</strong></label>
                                    <p class="form-control">{{ user.roles|join(', ') }}</p>
                                </div>
                                <div class="d-flex justify-content-end mt-6">
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning mb-2 btn-pill">Edit</a>
                                </div>
                                <a href="{{ path('app_user') }}" class="btn btn-secondary">Back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
