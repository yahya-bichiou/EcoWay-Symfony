{% extends 'base.html.twig' %}

{% block title %}Gestion de blog{% endblock %}

{% block body %}

  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <a href="index.html" class="logo">
              <img src="{{ asset('logo.png') }}" alt="">
            </a>
            <ul class="nav">
              <li class="scroll-to-section"><a href="/">Home</a></li>
              <li class="scroll-to-section"><a href="/depot">Dépots</a></li>
              <li class="scroll-to-section"><a href="/produitcon">Produits</a></li>
              <li class="scroll-to-section"><a href="/produits/boutique">Boutique</a></li>
              <li class="scroll-to-section"><a href="/bande/commande">Achat</a></li>
              <li class="scroll-to-section"><a href="/phase">Production</a></li>
              <li class="scroll-to-section"><a href="/utilisateur">Users</a></li>
            </ul>
            <a class='menu-trigger'>
                <span>Menu</span>
            </a>
          </nav>
        </div>
      </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->

  <div>
    <img src="{{ asset('bg1.png')}}" class="img-fluid">
  </div>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">Nos Derniers Blogs</h2>
            <p class="text-muted">Découvrez des actualités et tendances inspirantes.</p>
        </div>
        <a href="{{ path('app_post_new') }}" class="btn btn-primary fw-bold shadow-sm">
            <i class="fas fa-plus"></i> Ajouter un Post
        </a>
    </div>

    <!-- Formulaire de recherche -->
    <form method="GET" action="{{ path('front_posts') }}" class="mb-4">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Rechercher un article..." value="{{ query ?? '' }}">
            <button class="btn btn-primary" type="submit">Rechercher</button>
        </div>
    </form>

    <!-- Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} text-center">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Afficher un message si aucun résultat trouvé -->
    {% if posts is empty and query is not empty %}
        <div class="alert alert-warning text-center">
            Aucun résultat trouvé pour "<strong>{{ query }}</strong>".
        </div>
    {% endif %}

    <div class="row g-4">
    {% for post in posts %}
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                {% if post.image %}
                    <img src="/uploads/images/{{ post.image }}" alt="Image" class="card-img-top">
                {% else %}
                    <img src="{{ asset('images/default.png') }}" alt="Image par défaut" class="card-img-top">
                {% endif %}

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary fw-bold">{{ post.titre }}</h5>
                    <p class="text-muted flex-grow-1">
                        {{ post.description|length > 120 ? post.description|slice(0, 120) ~ '...' : post.description }}
                    </p>
                    <p class="mb-2"><strong>Créateur :</strong> <span class="text-primary">{{ post.createur }}</span></p>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-outline-primary w-100">
                        Lire l'article
                    </a>
                </div>
            </div>

            <!-- Section des Commentaires -->
            <div class="mt-3 p-4 border rounded-4 shadow-sm bg-white">
                <h6 class="fw-bold text-secondary">Commentaires</h6>
                <div class="overflow-auto" style="max-height: 180px;">
                    {% set hasComment = false %}
                    {% for commentaire in commentaires %}
                        {% if commentaire.post.id == post.id and not commentaire.isInappropriate %}
                            {% set hasComment = true %}
                            <div class="mb-2 p-3 border-bottom bg-light rounded-3">
                                <strong class="text-primary">{{ commentaire.auteur }}</strong>
                                <p class="mb-1 text-dark">{{ commentaire.message }}</p>
                            </div>
                        {% endif %}
                    {% endfor %}
                    {% if not hasComment %}
                        <p class="text-muted">Aucun commentaire pour ce post.</p>
                    {% endif %}
                </div>
                <form action="{{ path('app_commentaire_new', {'postId': post.id}) }}" method="post" class="mt-3">
                    <button type="submit" class="btn btn-success w-100 fw-bold">Ajouter un commentaire</button>
                </form>
            </div>

        </div>
    {% endfor %}

    {% if posts is empty %}
        <div class="col-12 text-center text-muted fs-5">Aucun article disponible.</div>
    {% endif %}
    </div>
  </div>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright © 2025 ECOWAY. All Rights Reserved</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Boutons de partage sticky -->
  <div class="sharethis-sticky-share-buttons"></div>

{% endblock %}
