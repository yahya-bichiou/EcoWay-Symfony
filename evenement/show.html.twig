{% extends 'base.html.twig' %}

{% block title %}participant{% endblock %}

{% block body %}
  <div id="contact" class="contact-us section">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.25s">
          <form id="contact" action="" method="post" novalidate>
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">

<table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ evenement.localisation }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ evenement.contact }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.dateD|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Recomponse</th>
                <td>{{ evenement.recomponse }}</td>
            </tr>
        </tbody>
    </table>     

                    

<a href="{{ path('participant_new', {'id': evenement.id}) }}" 
   style="display: inline-block; padding: 10px 15px; background-color: green; color: white; text-decoration: none; border-radius: 5px;">
   participer
</a>

<a href="{{ path('app_evenement_index', {'id': evenement.id}) }}" 
   style="display: inline-block; padding: 10px 15px; background-color: green; color: white; text-decoration: none; border-radius: 5px;">
   retourner
</a>
           </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
