{% extends 'back.html.twig' %}

{% block title %}Modifier un Produit{% endblock %}

{% block body %}
<body>
<div class="row">
  <div class="col-12">
    <div class="card card-default">
      <div class="card-header">
        <h2>Modifier le Produit</h2>
      </div>
      
      <div class="card-body">
        <form method="post" action="{{ path('back_produit_edit', {'id': produit.id}) }}" enctype="multipart/form-data" novalidate>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                {{ form_label(form.nom, "Nom du Produit") }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'maxlength': '255'}}) }}
                {{ form_errors(form.nom) }}
              </div>

              <div class="form-group">
                {{ form_label(form.description, "Description") }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'minlength': '10'}}) }}
                {{ form_errors(form.description) }}
              </div>

              <div class="form-group">
                {{ form_label(form.qualite, "Qualité") }}
                {{ form_widget(form.qualite, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.qualite) }}
              </div>

              <div class="form-group">
                {{ form_label(form.quantiteDisponible, "Quantité Disponible") }}
                {{ form_widget(form.quantiteDisponible, {'attr': {'class': 'form-control', 'type': 'number', 'min': '0'}}) }}
                {{ form_errors(form.quantiteDisponible) }}
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                {{ form_label(form.prix, "Prix") }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'type': 'number', 'min': '0.1', 'step': '0.01'}}) }}
                {{ form_errors(form.prix) }}
              </div>

              <div class="form-group">
                {{ form_label(form.dateAjout, "Date d'Ajout") }}
                {{ form_widget(form.dateAjout, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
                {{ form_errors(form.dateAjout) }}
              </div>

              <div class="form-group">
                {{ form_label(form.categorie, "Catégorie") }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.categorie) }}
              </div>

              <div class="form-group">
                {{ form_label(form.image, "Image du Produit") }}
                {% if produit.image %}
                    <div class="form-group">
                        <label for="image">Image actuelle</label><br>
                        <img src="{{ asset('uploads/produits/' ~ produit.image) }}" alt="Image du produit" style="max-width: 200px;">
                    </div>
                {% endif %}
                {{ form_widget(form.image, {'attr': {'class': 'form-control-file', 'accept': 'image/*'}}) }}
                {{ form_errors(form.image) }}
              </div>
            </div>
          </div>
          <button class="btn btn-primary">{{ button_label|default('Mettre à Jour') }}</button>
          <a href="{{ path('back_products') }}" class="btn btn-secondary">Annuler</a>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
{% endblock %}
