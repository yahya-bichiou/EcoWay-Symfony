{% extends 'base.html.twig' %}

{% block title %}D√©tails du Post - {{ post.titre }}{% endblock %}

{% block body %}
<section class="py-5 bg-light" style="margin-top: 140px;>

    <div class="container">
        <div class="row align-items-center">
            <!-- Image du Post -->
             <div class="col-md-5 text-center">
                <div class="p-3 shadow-lg rounded bg-white">
                    {% if post.image %}
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image du post" class="img-fluid rounded shadow-sm" style="max-width: 140%; height: auto;">
                    {% else %}
                        <div class="text-muted py-3 border rounded bg-light">Aucune image disponible</div>
                    {% endif %}
                </div>
            </div>

            <!-- D√©tails du Post -->
            <div class="col-md-7">
                <div class="p-4 shadow-lg rounded bg-white">
                    <h2 class="fw-bold text-primary">{{ post.titre }}</h2>
                    <p class="text-muted mt-3"><i class="fas fa-user"></i> Cr√©√© par : <strong>{{ post.createur }}</strong></p>
                    <p class="text-dark mt-3">{{ post.description }}</p>

                    <!-- Boutons d'action -->
                    <div class="mt-4 d-flex gap-2">
                        <a href="{{ path('front_posts') }}" class="btn btn-outline-primary fw-bold px-4">
                            ‚¨Ö Retour √† la liste
                        </a>
                        
                        <!-- Bouton Modifier (si admin ou auteur du post) -->
                        {% if is_granted('ROLE_ADMIN') or app.user == post.createur %}
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning text-white fw-bold">
                                ‚úè Modifier
                            </a>
                            <a href="{{ path('app_post_delete', {'id': post.id}) }}" class="btn btn-danger fw-bold"
                               onclick="return confirm('Voulez-vous vraiment supprimer ce post ?');">
                                üóë Supprimer
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Section des Commentaires -->
        <div class="row mt-5">
            <div class="col-lg-8 offset-lg-2">
                <div class="p-4 border rounded shadow-sm bg-white">
                    <h4 class="fw-bold text-secondary">Commentaires</h4>
                    <div class="overflow-auto" style="max-height: 250px;">
                        {% if commentaires is defined and commentaires|length > 0 %}
                            {% for commentaire in commentaires %}
                                <div class="mb-3 p-3 border-bottom bg-light rounded-3">
                                    <strong class="text-primary">{{ commentaire.auteur }}</strong>
                                    <p class="mb-1 text-dark">{{ commentaire.message }}</p>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucun commentaire pour ce post.</p>
                        {% endif %}
                    </div>

                    <!-- Formulaire d'ajout de commentaire -->
                    <form action="{{ path('app_commentaire_new', {'postId': post.id}) }}" method="post" class="mt-3">
                        <button type="submit" class="btn btn-success w-100 fw-bold">Ajouter un commentaire</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
