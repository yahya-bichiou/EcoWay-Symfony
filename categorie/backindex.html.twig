    <table class="table table-bordered table-striped text-center" style="table-layout: fixed; width: 100%;">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Produits associés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td style="white-space: pre-line; word-wrap: break-word; max-width: 200px; overflow-wrap: break-word;">
                        {{ categorie.description }}
                    </td>
                    <td>
                        {% if categorie.produits is not empty %}
                            <ul class="list-unstyled">
                                {% for produit in categorie.produits %}
                                    <li>- {{ produit.nom }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span class="text-muted">Aucun produit</span>
                        {% endif %}
                    </td>
                   <td class="text-center">
    <form action="{{ path('back_categorie_edit', {'id': categorie.id}) }}" method="POST" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ categorie.id) }}">
        <button type="submit" class="btn btn-warning btn-sm d-flex align-items-center justify-content-center" style="width: 100px;">
            <i class="fas fa-edit mr-2"></i> Modifier
        </button>
    </form>

    <form action="{{ path('back_categorie_delete', {'id': categorie.id}) }}" method="POST" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
        <button type="submit" class="btn btn-danger btn-sm d-flex align-items-center justify-content-center" style="width: 100px;"
            onclick="return confirm('Voulez-vous vraiment supprimer cette catégorie ?');">
            <i class="fas fa-trash-alt mr-2"></i> Supprimer
        </button>
    </form>
</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune catégorie disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

