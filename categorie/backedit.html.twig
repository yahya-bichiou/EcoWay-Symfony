{% extends 'back.html.twig' %}

{% block title %}Modifier une Catégorie{% endblock %}

{% block body %}
<body>
<div class="row">
  <div class="col-12">
    <div class="card card-default">
      <div class="card-header">
        <h2>Modifier la Catégorie</h2>
      </div>
      <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="form-group">
          {{ form_label(form.nom, "Nom de la Catégorie") }}
          {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'maxlength': '255'}}) }}
          {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
          {{ form_label(form.description, "Description") }}
          {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
          {{ form_errors(form.description) }}
        </div>

        <button class="btn btn-primary">{{ button_label|default('Mettre à Jour') }}</button>
        <a href="{{ path('back_categories') }}" class="btn btn-secondary">Annuler</a>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
</body>
{% endblock %}
